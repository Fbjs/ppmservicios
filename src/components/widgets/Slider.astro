---
import Button from '../ui/Button.astro';

const {
  title = 'Especialistas en mantenimiento y reparación de maquinaria pesada',
  subtitle = 'Minería, equipos especiales y maquinaria pesada. Servicio integral con estándares de fabricante.',
  videoSrc = '/videos/Index_video.mp4',
  buttons = [
    { text: 'Empieza Ahora', variant: 'formulario' },
    { text: 'Contacta a un Asesor', variant: 'whatsapp', phone: '56963238857' },
  ],
} = Astro.props;
---

<div class="relative w-full h-screen overflow-hidden flex flex-col justify-center items-center">
  <!-- Video de fondo -->
  <video autoplay muted loop playsinline class="absolute inset-0 object-cover w-full h-full z-0">
    <source src={videoSrc} type="video/webm" />
    Tu navegador no soporta videos.
  </video>

  <!-- Contenedor del contenido -->
  <div class="relative flex flex-col justify-center items-center h-full text-center p-10 z-10 entry-effect-2 bg-cover bg-center container">
    <h1 class="text-5xl font-bold mb-4 drop-shadow-lg animate__animated animate__fadeInDown text-[var(--aw-color-text-heading)] dark:text-[var(--aw-color-text-heading)]">
      {title}
    </h1>
    <p class="text-xl mb-6 drop-shadow-md max-w-3xl animate__animated animate__fadeInUp text-[var(--aw-color-accent)] dark:text-[var(--aw-color-accent)]">
      {subtitle}
    </p>
    
    <!-- Botones -->
    <div class="flex flex-col sm:flex-row space-y-4 sm:space-y-0 sm:space-x-4">
      {buttons.map(({ text, variant, phone }) => (
        <Button variant={variant} text={text} {...(phone ? { phone } : {})} />
      ))}
    </div>
  </div>
</div>
