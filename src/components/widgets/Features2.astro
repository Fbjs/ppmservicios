---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline2 from '~/components/ui/Headline2.astro';
import ItemGrid2 from '~/components/ui/ItemGrid2.astro';
import type { Features as Props } from '~/types';

const {
  title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  tagline = await Astro.slots.render('tagline'),
  items = [],
  columns = 3,
  defaultIcon,

  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline2
    title={title}
    subtitle={subtitle}
    tagline={tagline}
    classes={{
      container: 'mb-8 md:mb-12 text-center bg-[var(--aw-color-bg-page)] dark:bg-[var(--aw-color-bg-page)] rounded-xl backdrop-blur p-5 md:p-8',
      title: 'text-[var(--aw-color-text-heading)] dark:text-[var(--aw-color-text-default)] text-3xl md:text-4xl font-bold',
      subtitle: 'text-[var(--aw-color-text-muted)] dark:text-[var(--aw-color-text-muted)] text-lg',
      tagline: 'text-[var(--aw-color-accent)] dark:text-[var(--aw-color-secondary)] font-medium',
      ...(classes?.headline as Record<string, string>),
    }}
  />
  <ItemGrid2
    items={items}
    columns={columns}
    defaultIcon={defaultIcon}
    classes={{
      container: 'gap-4 md:gap-6 f2-items',
      panel: 'rounded-lg bg-[var(--aw-color-bg-page)] dark:bg-[var(--aw-color-bg-page)] p-6 shadow-md',
      icon: 'w-12 h-12 mb-6 text-[var(--aw-color-secondary)] dark:text-[var(--aw-color-accent)]',
      title: 'text-[var(--aw-color-text-heading)] dark:text-[var(--aw-color-text-default)] text-lg font-bold',
      description: 'text-[var(--aw-color-text-muted)] dark:text-[var(--aw-color-text-muted)] text-sm',
      ...((classes?.items as Record<string, never>) ?? {}),
    }}
  />
</WidgetWrapper>
