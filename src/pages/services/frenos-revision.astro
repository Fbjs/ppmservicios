---
import Layout from '~/layouts/LandingLayoutServices.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
//import Stats from '~/components/widgets/Stats.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Button from '~/components/ui/Button.astro';
import HeroImage from '~/assets/images/maquinaria-pesada.jpg';


const metadata = {
  title: 'Frenos y Revisión Técnica - PPM Servicios',
  ignoreTitleTemplate: true,
};
---
<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="Frenos y Revisión Técnica"
    title="Garantiza la Seguridad y el Rendimiento de tus Equipos"
    subtitle="Ofrecemos servicios especializados en frenos y revisión técnica para maquinaria pesada, flota liviana y equipos especiales."
    image={{
      src: HeroImage,
      alt: 'Frenos y revisión técnica de maquinaria pesada',
    }}
  >
    <Fragment slot="boton">
      <Button variant="formulario">
        Solicita una Cotización
      </Button>
      <Button
        variant="whatsapp"
        text="Más información"
        phone="56963238857"
      />
    </Fragment>
  </Hero2>

  <!-- Features Section -->
  <Features2
    classes={{ container: 'my-10' }}
    title="Beneficios de Nuestro Servicio de Frenos y Revisión Técnica"
    subtitle="Nuestros servicios están diseñados para garantizar la seguridad y el cumplimiento normativo de tus equipos."
    items={[
      {
        title: 'Inspección Completa',
        description: 'Revisamos todos los componentes del sistema de frenos para garantizar su correcto funcionamiento.',
        icon: 'tabler:checkup-list',
      },
      {
        title: 'Cumplimiento Normativo',
        description: 'Aseguramos que tus equipos cumplan con las normativas de revisión técnica.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Reparación y Ajuste',
        description: 'Realizamos ajustes y reparaciones necesarias para optimizar el rendimiento de los frenos.',
        icon: 'tabler:tool',
      },
    ]}
  />

  <!-- Stats Section 
  <Stats
    classes={{
      container: 'fondo-oscuro bg-dark bg-opacity-70 my-10',
    }}
    title="Resultados de Nuestros Servicios"
    stats={[
      { title: 'Equipos Revisados', amount: '600', symbol: '+' },
      { title: 'Clientes Satisfechos', amount: '200', symbol: '+' },
      { title: 'Años de Experiencia', amount: '15', symbol: '+' },
      { title: 'Proyectos Completados', amount: '500', symbol: '+' },
    ]}
  />-->

  <!-- Call to Action Section -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Contáctanos hoy',
        href: '/contact',
        icon: 'tabler:message-circle',
      },
    ]}
  >
    <Fragment slot="title">Confía en PPM Servicios</Fragment>
    <Fragment slot="subtitle">
      Nuestro servicio de frenos y revisión técnica garantiza la seguridad y el cumplimiento normativo de tus equipos.
    </Fragment>
    <Fragment slot="boton">
      <Button variant="primary" class="open-modal-btn">
        Cotiza tu Proyecto
      </Button>
    </Fragment>
  </CallToAction>

  <!-- FAQs Section -->
  <FAQs
    title="Preguntas Frecuentes"
    items={[
      {
        title: '¿Qué incluye el servicio de frenos y revisión técnica?',
        description:
          'Incluye inspección completa del sistema de frenos, ajustes, reparaciones y certificación para cumplir con las normativas.',
      },
      {
        title: '¿Qué tipos de equipos pueden ser revisados?',
        description:
          'Revisamos maquinaria pesada, flota liviana, buses y camiones.',
      },
      {
        title: '¿Cuánto tiempo toma la revisión técnica?',
        description:
          'El tiempo depende del estado del equipo, pero trabajamos para garantizar un servicio eficiente.',
      },
      {
        title: '¿Cómo puedo solicitar este servicio?',
        description:
          'Puedes contactarnos a través de nuestro formulario en línea o por WhatsApp para recibir más información y una cotización personalizada.',
      },
    ]}
  />
</Layout>
