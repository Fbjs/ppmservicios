---
import Layout from '~/layouts/LandingLayoutServices.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
//import Stats from '~/components/widgets/Stats.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Button from '~/components/ui/Button.astro';

import HeroImage from '~/assets/images/maquinaria-pesada.jpg';


const metadata = {
  title: 'Servicio Spot en Terreno - PPM Servicios',
  ignoreTitleTemplate: true,
};
---
<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="Servicio Spot en Terreno"
    title="Atención Rápida y Eficiente Donde lo Necesites"
    subtitle="Ofrecemos soluciones inmediatas para tus equipos en terreno, asegurando que tus operaciones no se detengan."
    image={{
      src: HeroImage,
      alt: 'Servicio spot en terreno para maquinaria pesada',
    }}
  >
    <Fragment slot="boton">
      <Button variant="formulario">
        Solicita una Cotización
      </Button>
      <Button
        variant="whatsapp"
        text="Más información"
        phone="56963238857"
      />
    </Fragment>
  </Hero2>

  <!-- Features Section -->
  <Features2
    classes={{ container: 'my-10' }}
    title="Beneficios del Servicio Spot en Terreno"
    subtitle="Nuestro servicio está diseñado para ofrecer soluciones rápidas y efectivas en el lugar donde lo necesites."
    items={[
      {
        title: 'Respuesta Inmediata',
        description: 'Atendemos tus necesidades en el menor tiempo posible para minimizar interrupciones.',
        icon: 'tabler:clock',
      },
      {
        title: 'Cobertura en Terreno',
        description: 'Ofrecemos atención dentro y fuera de Santiago, adaptándonos a tus requerimientos.',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Técnicos Especializados',
        description: 'Contamos con un equipo altamente capacitado para resolver cualquier problema en terreno.',
        icon: 'tabler:tool',
      },
    ]}
  />

  <!-- Stats Section 
  <Stats
    classes={{
      container: 'fondo-oscuro bg-dark bg-opacity-70 my-10',
    }}
    title="Resultados de Nuestro Servicio Spot"
    stats={[
      { title: 'Intervenciones en Terreno', amount: '300', symbol: '+' },
      { title: 'Clientes Satisfechos', amount: '200', symbol: '+' },
      { title: 'Años de Experiencia', amount: '15', symbol: '+' },
      { title: 'Técnicos Especializados', amount: '30', symbol: '+' },
    ]}
  />-->

  <!-- Call to Action Section -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: 'Contáctanos hoy',
        href: '/contact',
        icon: 'tabler:message-circle',
      },
    ]}
  >
    <Fragment slot="title">Confía en PPM Servicios</Fragment>
    <Fragment slot="subtitle">
      Nuestro servicio spot en terreno garantiza soluciones rápidas y efectivas para mantener tus operaciones en marcha.
    </Fragment>
    <Fragment slot="boton">
      <Button variant="primary" class="open-modal-btn">
        Cotiza tu Proyecto
      </Button>
    </Fragment>
  </CallToAction>

  <!-- FAQs Section -->
  <FAQs
    title="Preguntas Frecuentes"
    items={[
      {
        title: '¿Qué incluye el servicio spot en terreno?',
        description:
          'Incluye diagnóstico, reparación y mantenimiento de equipos directamente en el lugar donde se encuentren.',
      },
      {
        title: '¿En qué áreas ofrecen cobertura?',
        description:
          'Ofrecemos cobertura dentro y fuera de Santiago, adaptándonos a las necesidades de nuestros clientes.',
      },
      {
        title: '¿Qué tipos de equipos pueden atender en terreno?',
        description:
          'Atendemos maquinaria pesada, equipos de minería, flota liviana, buses y camiones.',
      },
      {
        title: '¿Cómo puedo solicitar el servicio spot?',
        description:
          'Puedes contactarnos a través de nuestro formulario en línea o por WhatsApp para coordinar una visita.',
      },
    ]}
  />
</Layout>
